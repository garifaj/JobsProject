@model Jobs_KS.Models.Job
@{ ViewData["Title"] = "Edit"; }
<br />

<h2 class="text-info">Edit Job</h2>
<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <h3>@ViewBag.message</h3>
        <div class="form-group ">
            <div class="col-2">
                <label asp-for="Title"></label>
            </div>
            <div class="col-5">
                <input asp-for="Title" class="form-control" />
            </div>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="col-2">
                <label asp-for="Description" class="control-label"></label>
            </div>

            <textarea asp-for="Description" class="form-control" placeholder="Description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group ">
            <div class="col-2">
                <label asp-for="Image"></label>
            </div>
            <div class="col-5">
                <input asp-for="Image" class="form-control" type="file" />
            </div>
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>

        <div class="form-group ">
            <div class="col-2">
                <label asp-for="JobTypeId"></label>
            </div>
            <div class="col-5">
                <select asp-for="JobTypeId" asp-items="ViewBag.jobTypeId" class="form-control"></select>
                @*<input asp-for="JobTypeId" class="form-control"/>*@
            </div>
            <span asp-validation-for="JobTypeId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Update" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
        <div class="col-1"></div>
        <div class="col-3">
            <img src="~/@Model.Image" width="100%" height="250px" style="border-radius: 5px;border: 1px solid #efefef" />
        </div>

    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

